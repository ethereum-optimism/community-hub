@import url(https://fonts.googleapis.com/css2?family=Roboto:wght@700&display=swap);

body {
  font-family:-apple-system, BlinkMacSystemFont, "Segoe UI", Oxygen, Ubuntu, Cantarell, "Fira Sans", "Droid Sans", "Helvetica Neue", Roboto, sans-serif;
}

h1 {
  font-family: "Roboto";
  font-size: 48px;
  text-decoration: $accentColor underline;
  font-style: italic;
}

h2 {
  border-bottom: none;
  font-family: "Roboto";
  font-size: 36px;
  text-decoration: $accentColor underline;
}

.navbar .home-link span,
.sidebar .sidebar-group .sidebar-heading {
  color: $textColor;
  font-family: "Roboto";
  text-decoration: $accentColor underline;
  font-style: italic;
}

.sidebar .sidebar-heading {
  opacity: 1 !important;
}

.home .hero {
  text-align: center;
}

.home .hero .action-button {
  color: black !important;
  background-color: white !important;
  border: 1px solid black !important;
  font-family: "Roboto";
  margin: 15px auto;
  cursor: pointer;
  width: 250px;
  display: block !important;
}

.home .hero .action-button u {
  text-decoration: $accentColor underline;
  text-decoration-thickness: 2px;
}

.home .hero .action-button:hover {
  -webkit-box-shadow: 5px 5px 0px -1px $accentColor; 
  box-shadow: 5px 5px 0px -1px $accentColor;
}

.tag-info-block {
  padding: 0.5rem 1.5rem;
  color: $textColor;
  background-color: $lightBackgroundColor;
  border-left: 8px solid $textColor;
}

a > code {
  color: $accentColor !important;
}

#tagline {
  position: relative;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0% {
    left: -10px;
  }
  50% {
    left: 10px;
  }
  100% {
    left: -10px;
  }
}

.search-box {
  order: 1;
  margin-right: 0;
  margin-left: 1rem;

  .suggestions {
    left: auto !important;
    right: 0 !important;
  }
}

.chainid-link-iframe {
  width: 100%;
  height: 500px;
  overflow: hidden;
}

div.custom-block {
  border-left-color: #ff0420 !important;
}

h4 {
  font-size: 18px;
}

.theme-default-content img {
  display: block;
  margin: 0 auto;
}